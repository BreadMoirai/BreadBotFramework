<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss} [%logger{20}] %-5level - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level = "info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>